const config = require('../../config');

module.exports = async (req, res) => {
  const { code } = req.query;

  if (code === config.code) {
      res.status(200).json({
          success: true,
          message: `ดีจ้า ${config.name}`
      });
  } else {
      res.status(400).json({
          success: false,
          message: 'Invalid code'
      });
  }
};
